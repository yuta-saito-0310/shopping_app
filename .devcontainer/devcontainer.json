{
	"name": "Rails Devcontainer",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "web",
	"workspaceFolder": "/workspaces/shopping_app",
	// コンテナ内で使う拡張機能
	"customizations": {
		"vscode": {
			"extensions": [
				"rebornix.Ruby",
				"misogi.ruby-rubocop",
				"ms-azuretools.vscode-docker",
				"esbenp.prettier-vscode"
			],
			"settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
		}
	}
}