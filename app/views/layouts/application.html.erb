<!DOCTYPE html>
<html>
  <head>
    <title><%= document_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>

    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/header' %>
    <main class="container mx-auto px-5 flex flex-col items-center">
      <% flash.each do |message_type, message| %>
        <% if message_type == 'alert' %>
          <div class="bg-red-100 border border-red-400 text-xl text-red-700 px-4 py-3 rounded relative">
            <%= message %>
          </div>
        <% end %>
        <% if message_type == 'notice' %>
          <div class="bg-green-100 border border-green-400 text-xl  text-green-700 px-4 py-3 rounded relative">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
