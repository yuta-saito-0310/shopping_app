<header class="bg-blue-500 text-white p-4 flex items-center justify-between">
  <h1 class="text-3xl font-bold">買物メモ</h1>
  <% if current_user %>
    <%= button_to 'ログアウト', logout_path, method: :delete, class: "text-white text-lg font-bold py-2 px-4 m-4 rounded bg-red-500 hover:bg-red-700" %>
  <% else %>
    <%= render partial: 'shared/button', locals: { label: 'ログイン', path: login_path, extra_classes: 'bg-green-500 hover:bg-green-700' } %>
  <% end %>
</header>
