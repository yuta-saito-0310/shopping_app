<header class="bg-blue-500 text-white">
  <nav class="p-4 flex items-center justify-between">
    <div>
      <span class="flex-1 text-3xl font-bold"><%= t('.app_name') %></span>
    </div>
    <div class="flex justify-end">
      <% if current_user %>
        <% if current_page?(new_user_shopping_path(current_user)) %>
          <%= button_to t('.shopping_history'),
                        user_shoppings_path,
                        method: :get,
                        class: 'text-white text-lg font-bold py-2 px-4 m-1 \
                                rounded bg-yellow-500 hover:bg-gray-500' %>
        <% end %>
        <% if current_page?(user_shoppings_path(current_user)) %>
          <%= button_to t('.create_memo'),
                        new_user_shopping_path,
                        method: :get,
                        class: 'text-white text-lg font-bold py-2 px-4 m-1 \
                                rounded bg-purple-500 hover:bg-purple-700' %>
        <% end %>
        <%= button_to t('.logout'),
                      sessions_path,
                      method: :delete,
                      class: 'text-white text-lg font-bold py-2 px-4 m-1 rounded bg-red-500 hover:bg-red-700' %>
      <% else %>
        <%= render partial: 'shared/button',
                   locals: { label: t('.login'), path: new_sessions_path,
                             extra_classes: 'bg-green-500 hover:bg-green-700' } %>
      <% end %>
    </div>
  </nav>
</header>
